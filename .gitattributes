* text=auto

# Source files — LF in repo
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf

# Scripts that need CRLF on Windows
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Binary files (never touched)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.svg  binary
*.hex  binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary
